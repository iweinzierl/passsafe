<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <TextView
            android:text="@string/dialog_firstappstart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <Button
                android:id="@+id/newdatabase"
                android:text="@string/dialog_firstappstart_newdatabase"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/synchronizedatabases"
                android:text="@string/dialog_firstappstart_synchronizedatabase"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>