<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:background="@color/grey">

    <LinearLayout
            android:id="@+id/container_header"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/passsafe"
                android:contentDescription="@string/fragment_login_appicon"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/textView2"
                android:textSize="24sp"
                android:text="@string/fragment_login_apptitle"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:background="@drawable/roundcorners"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/container_login"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_login_enterpassword"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="12dp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true" android:layout_marginBottom="20dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_below="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                        android:id="@+id/showpassword"
                        android:text="@string/fragment_login_showpassword"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>

                <Button
                        android:id="@+id/login_button"
                        android:text="@string/fragment_login_loginbutton"
                        android:layout_gravity="right"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
